<div clss='row'>
  <h2>My Profile </h2>
  <div class='col-lg-2 col-md-2'>
    
    <%= image_tag '',size: '150x150', alt: 'Image Not found' %><br /><br />    
    <%= link_to "Change Image", "", class: 'btn btn-primary' %>
  </div>
  
  <div class='col-lg-2 col-md-3'></div>
  
  <div class='col-lg-8 col-md-7'>    
    <div id='user-details'>              
      <%= render @user %>
      <hr>
      <span id='statistcs'>
        <%= pluralize current_user.courses.count, 'Course' %> - 
        <%= pluralize current_user.books.count, 'Book' %> - 
        <%= pluralize current_user.accounts.count, 'Account' %>
      </span>
      <div id='edit-profile-link'>
        <%= link_to "Edit My Profile", edit_user_path(current_user.id), "data-no-turbolink" => "true", class: 'btn btn-success' %>
      </div>
    </div>
  </div>
    
</div>
  