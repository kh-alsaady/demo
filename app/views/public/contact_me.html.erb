<div class='row' id='contact-me'>
  <div class='col col-lg-6 col-md-6 '>
    <%= image_tag "me.jpg", size: '250x250', alt: 'Khalid Alsaadi', class: 'img-circle' %>
  </div>

  <div class='col col-lg-6 col-lg-pull-2 col-md-6'>
    <%= form_tag contact_me_path do %>
      <div class='form-group'>
        <%= label_tag :name, 'Name', class: 'sr-only' %>
        <%= text_field_tag :name, params[:name], size: 50, class: 'form-control', placeholder: 'Enter Your Name' %>
      </div>
      <div class='form-group'>
        <%= label_tag :email, "Email", class: 'sr-only' %>
        <%= email_field_tag :email, params[:email], size: 50, class: 'form-control', placeholder: 'Enter Your Email' %>
      </div>
      <div class='form-group'>
        <%= label_tag :message, "Message", class: 'sr-only' %>
        <%= text_area_tag :message, params[:message], size: '50x7', class: 'form-control', placeholder: 'Enter Your Message' %>
      </div>
      <div id='contact-me-submit'><%= submit_tag 'Send', class: 'btn btn-primary btn-lg' %></div>      
    <% end %>    
  </div>

</div>

